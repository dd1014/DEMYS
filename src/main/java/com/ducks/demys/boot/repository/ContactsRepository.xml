<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ducks.demys.boot.repository.ContactsRepository">
	<select id="getContactsList" resultType="Contacts">
		SELECT *
		FROM CONTACTS
		ORDER BY CT_NUM DESC
	</select>
	
	<select id="getContactsListByPJ_NUM" resultType="Contacts">
		SELECT *
		FROM CONTACTS
		WHERE PJ_NUM=#{PJ_NUM}
		ORDER BY CT_NUM DESC
	</select>
	
	<select id="getContactsByCT_NUM" resultType="Contacts">
		SELECT *
		FROM CONTACTS
		WHERE CT_NUM=#{CT_NUM}
	</select>
	
	<select id="getContactsByCT_NAME" resultType="Contacts">
		SELECT *
		FROM CONTACTS
		WHERE CT_NAME=#{CT_NAME}
	</select>
	
	<select id="selectContactsSequenceNextValue" resultType="int">
		SELECT
		CONTACTS_seq.nextVal
		FROM DUAL
	</select>
	
	<update id="registContacts">
		INSERT INTO
		CONTACTS(CT_NUM,CT_NAME,CT_TEL,CT_CEO,CT_MANAGER,CT_MG_TEL,CT_TYPE,CT_ADDR,CT_EMAIL)
		VALUES(#{CT_NUM},#{CT_NAME},#{CT_TEL},#{CT_CEO},#{CT_MANAGER},#{CT_MG_TEL},#{CT_TYPE},#{CT_ADDR},#{CT_EMAIL})
	</update>
	
	<update id="modifyContacts">
		UPDATE CONTACTS
		SET
		CT_NAME=#{CT_NAME},CT_TEL=#{CT_TEL},CT_CEO=#{CT_CEO},CT_MANAGER=#{CT_MANAGER},CT_MG_TEL=#{CT_MG_TEL},CT_TYPE=#{CT_TYPE},CT_ADDR=#{CT_ADDR},CT_EMAIL=#{CT_EMAIL},CT_UPDATEDATE=SYSDATE
		WHERE CT_NUM=#{CT_NUM}
	</update>
	
	<delete id="removeContacts">
		DELETE
		FROM CONTACTS
		WHERE CT_NUM=#{CT_NUM}
	</delete>
</mapper>